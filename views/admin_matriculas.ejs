<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Matrículas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
  <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body class="bg-gray-50 font-sans min-h-screen flex flex-col">
  <header class="custom-bg text-white py-4 shadow-md">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <img src="/assets/img/logo.png" alt="Logo Academia Halcones UV" class="h-16 w-auto">
      <div>
        <button onclick="window.location.href='/admin-panel/<%= adminId %>'" class="custom-button text-white py-2 px-4 rounded-md font-semibold">
          Regresar al Panel
        </button>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-12 flex-grow">
    <h1 class="text-3xl font-bold mb-8 text-gray-700 text-center">Gestión de Matrículas Disponibles</h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= success %></span>
      </div>
    <% } %>

    <section class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md mx-auto mb-8">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Agregar Nueva Matrícula</h2>
      <form action="/admin/matriculas/agregar" method="POST" class="flex items-center space-x-2">
        <input 
          type="text" 
          name="matricula" 
          class="border border-gray-300 p-2 w-full rounded-md" 
          placeholder="Ej: zS21012345" 
          required>
        <button type="submit" class="custom-button py-2 px-4 rounded-md whitespace-nowrap">Agregar</button>
      </form>
    </section>

    <section class="bg-white p-6 rounded-lg shadow-lg w-full max-w-2xl mx-auto">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Lista de Matrículas</h2>
      <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-300 px-4 py-2 text-left">Matrícula</th>
              <th class="border border-gray-300 px-4 py-2 text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% if (matriculas.length > 0) { %>
              <% matriculas.forEach(m => { %>
                <tr class="hover:bg-gray-50">
                  <td class="border border-gray-300 px-4 py-2 font-mono"><%= m.matricula %></td>
                  <td class="border border-gray-300 px-4 py-2 text-center">
                    <form 
                      action="/admin/matriculas/eliminar/<%= m.matricula %>" 
                      method="POST" 
                      class="inline" 
                      onsubmit="return confirm('¿Estás seguro de que deseas eliminar la matrícula <%= m.matricula %>?');">
                      <button type="submit" class="logout-button py-1 px-3 rounded-md text-sm">Eliminar</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="2" class="text-center border border-gray-300 px-4 py-3 text-gray-500">
                  No hay matrículas disponibles. Agrega una nueva.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
  </main>

  <footer class="custom-bg text-white py-6 mt-auto w-full">
    <div class="container mx-auto px-4 text-center">
      <p>Academia Halcones UV - Todos los derechos reservados 2024</p>
    </div>
  </footer>
</body>
</html>