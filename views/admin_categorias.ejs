<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Categorías</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
  <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body class="bg-gray-50 font-sans min-h-screen flex flex-col">
  <header class="custom-bg text-white py-4 shadow-md">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <img src="/assets/img/logo.png" alt="Logo Academia Halcones UV" class="h-16 w-auto">
      <div>
        <button onclick="window.location.href='/admin-panel/<%= adminId %>'" class="custom-button text-white py-2 px-4 rounded-md font-semibold">
          Regresar al Panel
        </button>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-12 flex-grow">
    <h1 class="text-3xl font-bold mb-8 text-gray-700 text-center">Gestión de Categorías</h1>

    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= success %></span>
      </div>
    <% } %>

    <section class="bg-white p-6 rounded-lg shadow-lg w-full max-w-3xl mx-auto mb-8">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Agregar Nueva Categoría</h2>
      <form action="/admin/categorias/agregar" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
        <div>
          <label for="nombre" class="block text-sm font-medium text-gray-700">Nombre de Categoría</label>
          <input type="text" name="nombre" class="mt-1 border border-gray-300 p-2 w-full rounded-md" placeholder="Ej: 2020-2021" required>
        </div>
        <div>
          <label for="horario" class="block text-sm font-medium text-gray-700">Horario</label>
          <input type="text" name="horario" class="mt-1 border border-gray-300 p-2 w-full rounded-md" placeholder="Ej: 16:00 a 17:30h" required>
        </div>
        <button type="submit" class="custom-button py-2 px-4 rounded-md h-10">Agregar</button>
      </form>
    </section>

    <section class="bg-white p-6 rounded-lg shadow-lg w-full max-w-3xl mx-auto">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Lista de Categorías</h2>
      <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse">
          <thead class="bg-gray-100">
            <tr>
              <th class="border px-4 py-2 text-left">Nombre</th>
              <th class="border px-4 py-2 text-left">Horario</th>
              <th class="border px-4 py-2 text-center">Estado</th>
              <th class="border px-4 py-2 text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% if (categorias.length > 0) { %>
              <% categorias.forEach(categoria => { %>
                <tr id="view-<%= categoria.id %>">
                  <td class="border px-4 py-2"><%= categoria.nombre %></td>
                  <td class="border px-4 py-2"><%= categoria.horario %></td>
                  <td class="border px-4 py-2 text-center">
                    <span class="<%= categoria.is_activa ? 'text-green-600' : 'text-gray-500' %> font-semibold">
                      <%= categoria.is_activa ? 'Activa' : 'Inactiva' %>
                    </span>
                  </td>
                  <td class="border px-4 py-2 text-center space-x-2">
                    <button onclick="toggleEdit(<%= categoria.id %>)" class="bg-blue-500 text-white py-1 px-3 rounded-md text-sm">Editar</button>
                    <form action="/admin/categorias/eliminar/<%= categoria.id %>" method="POST" class="inline" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta categoría?');">
                      <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded-md text-sm">Eliminar</button>
                    </form>
                  </td>
                </tr>
                <tr id="edit-<%= categoria.id %>" style="display:none;" class="bg-yellow-50">
                  <td class="border px-4 py-2" colspan="4">
                    <form action="/admin/categorias/editar/<%= categoria.id %>" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-center">
                      <input type="text" name="nombre" value="<%= categoria.nombre %>" class="border border-gray-300 p-2 w-full rounded-md">
                      <input type="text" name="horario" value="<%= categoria.horario %>" class="border border-gray-300 p-2 w-full rounded-md">
                      <div class="flex items-center justify-center">
                        <input type="checkbox" name="is_activa" class="form-checkbox h-5 w-5" <%= categoria.is_activa ? 'checked' : '' %>>
                        <label class="ml-2 text-sm">Activa</label>
                      </div>
                      <div class="space-x-2">
                        <button type="submit" class="bg-green-500 text-white py-1 px-3 rounded-md text-sm">Guardar</button>
                        <button type="button" onclick="toggleEdit(<%= categoria.id %>)" class="bg-gray-500 text-white py-1 px-3 rounded-md text-sm">Cancelar</button>
                      </div>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center border px-4 py-3 text-gray-500">No hay categorías. Agrega una nueva.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
  </main>
  
  <footer class="custom-bg text-white py-6 mt-auto w-full">
    <div class="container mx-auto px-4 text-center">
      <p>Academia Halcones UV - Todos los derechos reservados 2025</p>
    </div>
  </footer>

  <script>
    function toggleEdit(id) {
      const viewRow = document.getElementById('view-' + id);
      const editRow = document.getElementById('edit-' + id);
      
      if (viewRow.style.display !== 'none') {
        viewRow.style.display = 'none';
        editRow.style.display = 'table-row';
      } else {
        viewRow.style.display = 'table-row';
        editRow.style.display = 'none';
      }
    }
  </script>
</body>
</html>